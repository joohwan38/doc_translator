{
    "name": "document-translator",
    "version": "1.5.0",
    "description": "PowerPoint Document Translator using Ollama and Electron",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist:mac": "electron-builder --mac",
        "dist": "electron-builder"
    },
    "keywords": [
        "Electron",
        "Python",
        "Flask",
        "Ollama",
        "Translation"
    ],
    "author": "joohwan.son",
    "private": true,
    "license": "UNLICENSED",
    "dependencies": {
        "find-free-port": "^2.0.0"
    },
    "devDependencies": {
        "electron": "^29.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.yourcompany.powerpointtranslator",
        "productName": "Document Translator",
        "asar": true,
        "files": [
            "main.js",
            "preload.js",
            "assets/**/*",
            "!*.md"
        ],
        "extraResources": [
        {
          "from": "./python_runtime/", 
          "to": "python_runtime",    
          "filter": ["**/*"]
        },      { 
        "from": "./python_backend/", 
        "to": "python_backend", 
        "filter": ["**/*"]
      }],
        "mac": {
            "category": "public.app-category.utilities",
            "target": "dmg",
            "icon": "assets/app_icon.icns",
            "gatekeeperAssess": false,
            "hardenedRuntime": false
        },
        "win": {
            "target": "nsis",
            "icon": "assets/app_icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/app_icon.png"
        },
        "directories": {
            "buildResources": "assets",
            "output": "release"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/joohwan38/doc_translator.git"
    },
    "bugs": {
        "url": "https://github.com/joohwan38/doc_translator/issues"
    },
    "homepage": "https://github.com/joohwan38/doc_translator#readme"
}
