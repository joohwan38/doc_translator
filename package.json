{
    "name": "document-translator",
    "version": "1.7.1",
    "description": "PowerPoint Document Translator using Ollama and Electron",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist:mac": "electron-builder --mac ",
        "dist": "electron-builder --win"
    },
    "keywords": [
        "Electron",
        "Python",
        "Flask",
        "Ollama",
        "Translation"
    ],
    "author": "joohwan.son",
    "private": true,
    "license": "UNLICENSED",
    "dependencies": {
        "find-free-port": "^2.0.0"
    },
    "devDependencies": {
        "@electron/notarize": "^3.0.1",
        "dotenv": "^16.5.0",
        "electron": "^29.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.joohwan.doctranslator",
        "productName": "DocumentTranslator",
        "asar": true,
        "files": [
            "main.js",
            "preload.js",
            "assets/**/*",
            "!*.md",
            "!python_runtime/**/__pycache__/**/*",
            "!**/__pycache__/**/*",
            "!**/*.pyc"
        ],
        "extraResources": [
            {
                "from": "./python_runtime/",
                "to": "python_runtime",
                "filter": [
                    "**/*",
                    "!**/*.pyc",
                    "!**/__pycache__/**"
                ]
            },
            {
                "from": "./python_backend/",
                "to": "python_backend",
                "filter": [
                    "**/*",
                    "!**/*.pyc",
                    "!**/__pycache__/**"
                ]
            }
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "target": "dmg",
            "icon": "assets/app_icon.icns",
            "hardenedRuntime": true,
            "identity": "joohwan sohn (R4G7STHU64)",
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.inherit.plist",
            "notarize": false
        },
        "afterSign": "scripts/notarize.js",
        "win": {
            "target": "nsis",
            "icon": "assets/app_icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/app_icon.png"
        },
        "directories": {
            "buildResources": "assets",
            "output": "release"
        },
        "dmg": {
            "sign": false
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/joohwan38/doc_translator.git"
    },
    "bugs": {
        "url": "https://github.com/joohwan38/doc_translator/issues"
    },
    "homepage": "https://github.com/joohwan38/doc_translator#readme"
}
